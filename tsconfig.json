{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    // compiler settings
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // output settings
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist",

    // implicit types
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
}
